{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}

{{ form_errors(form) }}
	<div class="form-group col-lg-12 m-0">
		{{ form_label(form.current_password, "Ancien mot de passe*", {'label_attr': {'class': 'pt-3 col-sm-12 control-label'}}) }}
		{{ form_errors(form.current_password) }}
		<div class="col-sm-12">
		  	{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group col-lg-12 m-0">
		{{ form_errors(form.plainPassword) }}
        <div class="col-sm-12">
        {{ form_label(form.plainPassword.first, "Nouveau mot de passe*") }}
        {{ form_errors(form.plainPassword.first) }}
    		{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
     	</div>
     	<div class="col-sm-12">
        {{ form_label(form.plainPassword.second, "Confirmer nouveau mot de passe*") }}
        {{ form_errors(form.plainPassword.second) }}
        	{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
 		</div>
	</div>
    <div class="col-sm-12 p-3">
        <input class="btn btn-primary" type="submit" value="Valider" />
    </div>
{{ form_end(form) }}
