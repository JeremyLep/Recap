{% extends "@FOSUser/layout.html.twig" %}

{% block cover %}
<div class="cover">
	<img src="{{ asset('bundles/app/home/bg-coffee.jpg') }}">
</div>
{% endblock %}

{% block fos_user_content %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="col-sm-12 col-md-8 col-lg-6 p-0 offset-md-2 offset-lg-3 pt-5" id="msform">
	<fieldset>
	    <h2 class="fs-title p-2">Authentification</h2>
    	<h3 class="fs-subtitle"></h3>
    	<form action="{{ path('fos_user_security_check') }}" method="post">
			{% if csrf_token %}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			{% endif %}
			<div class="col-12 pt-2">
				<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Identifiant ou Email" required="required" />	
			</div>
			<div class="col-12 pt-2">
				<input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>
			</div>
			<div class="form-group col-12 pt-2 pb-3 pull-left"> 
				<input class="pt-2" type="checkbox" id="remember_me" name="_remember_me" value="on" />
				<label for="remember_me" class="remember">Se rappeler de moi</label>
			</div>
			<div class="col-12 pt-5">
		    	<input type="submit" name="_submit" id="_submit" class="action-button" value="Valider" />
	    	</div>
	  		<div class="p-3 pt-4">
				<small class="forum-desc pull-left">
					<a href="{{ path('fos_user_registration_register') }}">Vous n'avez pas de compte ?</a> 
				</small>
				<small class="forum-desc pull-right">
					<a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a> 
				</small>
			</div>
		</form>
  	</fieldset>
</div>

{% endblock fos_user_content %}