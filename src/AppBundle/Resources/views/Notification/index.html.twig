{% extends "AppBundle::layout.html.twig" %}

{% block titre %}
  <a class="navbar-brand" href="#">Les evenements de {{ groupe.titre }}</a>
{% endblock %}

{% block groupe %}
  <li class="nav-item" id="fiche-icon">
    <a class="nav-link" href="">{{ groupe.nbFiche }}  <i class="fa fa-file-text-o" aria-hidden="true"></i></a>
  </li>
  <li class="nav-item" id="notification-list">
    <a class="nav-link" href="">{{ groupe.nbMembre }}  <i class="fa fa-user-o" aria-hidden="true"></i></a>
  </li>
  <li class="nav-item" id="invite">
    <a class="nav-link" href=""><i class="fa fa-envelope-o" aria-hidden="true"></i></a>
  </li>
{% endblock %}

{% block body %}
<div class="row col-12" id="menu-titre" style="border-bottom: .0625rem solid #e8e8e8;">
  <h5 class="p-3 m-0">{{ notifications|length }} notifications</h5>
</div>
<div class="row p-2" id="notification" style=" border-right: .25rem solid transparent;">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Date</th>
        <th>Fiche</th>
        <th>Ajoue ressource</th>
      </tr>
    </thead>
    <tbody>
    {% for notification in notifications %}
      <tr>
        <th scope="row">{{ notification.notification.id }}</th>
        <td>{{notification.notification.date|date}}</td>
        <td>{{notification.notification.fiche.titre}}</td>
        <td>{{notification.notification.nbRessource}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}