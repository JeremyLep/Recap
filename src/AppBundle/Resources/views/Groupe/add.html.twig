{% extends "AppBundle::layout.html.twig" %}

{% block groupe %}{% endblock %}

{% block body %}
<div class="row col-12 pt-2" id="menu-titre" style="border-bottom: .0625rem solid #e8e8e8;">
    <h5 class="p-3 m-0">Créer un nouveau groupe</h5>
</div>
<div class="col-sm-8 offset-sm-2">
    {{ form_start(form) }}
        <div class="col-12">
            {{ form_label(form.titre) }}
            {{ form_errors(form.titre) }}
            {{ form_widget(form.titre, { 'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_label(form.avatar) }}
            {{ form_errors(form.avatar) }}
            {{ form_widget(form.avatar, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="text-right col-12 mt-2">
            <input type="submit" class="btn btn-defaut-inv btn-lg" value="Créer" />
            <a href="{{ path('app_home') }}" class="btn btn-secondary btn-lg">Retour</a>
        </div>
    {{ form_end(form) }}
</div>
    
{% endblock %}
