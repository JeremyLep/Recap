{% extends "AppBundle::layout.html.twig" %}

{% block titre %}
  <a class="navbar-brand" href="{{ path('app_groupe', {'id_groupe': groupe.id}) }}">{{ groupe.titre }}</a>
    
  {% if groupe.avatar == null %}
    <span class="default-avatar m-0 hidden-xs" style="background-color: {{ groupe.color  }};">{{ groupe.titre|first|upper }}</span>
  {% else %}
    <img src="{{ asset('bundles/app/avatar/'~ groupe.avatar) }}" class="img-fluid rounded mt-2 text-right hidden-xs" alt="avatar" style="max-width: 35px; max-height: 35px;">
  {% endif %}
{% endblock %}

{% block groupe %}
  <li class="nav-item li-inline" id="fiche-icon">
    <a class="nav-link" href="{{ path('app_groupe', {'id_groupe': groupe.id} ) }}">{{ groupe.nbFiche }}  <i class="fa fa-file-text-o" aria-hidden="true"></i></a>
  </li>
  <li class="nav-item li-inline" id="membre-list">
    <a class="nav-link" href="{{ path('app_membre', {'id_groupe': groupe.id}) }}">{{ groupe.nbMembre }}  <i data-toggle="tooltip" data-placement="bottom" title="Membres du groupe" class="fa fa-user-o" aria-hidden="true"></i></a>
  </li>
{% endblock %}

{% block body %}
<div class="row col-12 pt-2" id="menu-titre" style="border-bottom: .0625rem solid #e8e8e8;">
    <h5 class="p-3 m-0">Editer le groupe {{ groupe.titre }}</h5>
</div>
 <div class="col-sm-8 offset-sm-2">
    {{ form_start(editForm) }}
        <div class="col-12">
            {{ form_label(editForm.titre) }}
            {{ form_errors(editForm.titre) }}
            {{ form_widget(editForm.titre, { 'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_label(editForm.avatar) }}
            {{ form_errors(editForm.avatar) }}
            {{ form_widget(editForm.avatar, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="text-right col-12 mt-2">
            <input type="submit" class="btn btn-defaut-inv btn-lg" value="Edit" />
            <a href="{{ path('app_groupe', {'id_groupe': groupe.id}) }}" class="btn btn-secondary btn-lg">Retour</a>
        </div>
    {{ form_end(editForm) }}
</div>
{% endblock %}
