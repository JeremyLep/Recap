<nav class="col-sm-3 col-md-2 d-none d-md-block bg-dark navbar-dark p-0" id="menu-left" style="position: fixed; height: 100%; border-right: .20rem solid transparent;">
    <div id="brand" class="col-sm-3 col-md-2 bg-info p-2">
      <a class="text-white" href="{{ path('app_home') }}">
        <h5 class="font-brand inline">Recap</h5>
        <img src="{{ asset('bundles/app/images/logo.png') }}" height="40" width="40">
      </a>
    </div>
  <div class="col-12 p-0">
    <div id="connected-user" class="row m-0 w-100">
      <div class="col-4 m-auto">
        {% if app.user.avatar == null %}
        <span class="default-avatar m-auto" style="background-color: {{ app.user.color  }};">{{ app.user.username|first|upper }}</span>
        {% else %}
        <img src="{{ asset('bundles/app/avatar/'~ app.user.avatar) }}" class="rounded m-auto text-right" alt="avatar" height="30" width="35">
        {% endif %}
      </div>
      <div class="col-7 p-0">
        <h6 id="nom" class="inline text-white p-2 m-auto">{{ app.user.username }}</h6>
      </div>
      <div class="col-1 p-0 m-auto premium-star">
        {% if app.user.isPremium() %}
          <i class="fa fa-star inline text-warning" data-toggle="tooltip" data-placement="bottom" title="Compte Premium"></i>
        {% endif %}
      </div>
    </div>
            
    <ul class="nav nav-pills flex-column pt-3">
      <li class="nav-item text-grey">
        <a class="nav-link" href="{{ path('app_home') }}"><i class="fa fa-home"></i> Tableau de bord</a>
      </li>
    </ul>
    <ul class="nav nav-pills flex-column pt-3 w-100">
      {{ render(controller('AppBundle:Default:menu')) }}
    </ul>
    {% if not app.user.isPremium() %}
    <ul class="nav nav-pills flex-column pt-3 w-100">
      <li class="nav-item">
        <a href="{{ path('app_purchase') }}" class="btn btn-premium text-white w-100">Passez premium !</a>
      </li>
    </ul>
    {% else %}
    <ul class="nav nav-pills flex-column pt-5 w-100">
      <li class="nav-item premium-menu">
        <div class="text-warning w-100 pl-3 p-1">Compte Premium : <br>{{ app.user.getRemainTime() }}</div>
      </li>
    </ul>
    {% endif %}

  </div>
</nav>