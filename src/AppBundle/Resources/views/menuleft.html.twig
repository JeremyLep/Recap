<nav class="col-sm-3 col-md-2 d-none d-md-block navbar-dark bg-dark p-0" id="menu-left" style="position: fixed; height: 100%; border-right: .20rem solid transparent;">
  <div class="col-12 p-0">
    <div class="row m-0 w-100">
      <div class="col-4">
        {% if app.user.avatar == null %}
        <span class="default-avatar" style="background-color: {{ app.user.color  }};">{{ app.user.username|first|upper }}</span>
        {% else %}
        <img src="{{ asset('bundles/app/avatar/'~ app.user.avatar) }}" class="rounded mt-2 text-right" alt="avatar" style="width: 40px; height: 35px;">
        {% endif %}
      </div>
      <div class="col-8 p-0">
        <h6 id="nom" class="inline text-white pb-2 pt-3">{{ app.user.username }} </h6>
        {% if app.user.isPremium() %}
        <i class="fa fa-star inline text-warning"></i>
        {% endif %}
      </div>
    </div>
            
    <ul class="nav nav-pills flex-column pt-3">
      <li class="nav-item text-grey">
        <a class="nav-link" href="{{ path('app_home') }}"><i class="fa fa-home"></i> Tableau de bord</a>
      </li>
    </ul>
    <ul class="nav nav-pills flex-column pt-3 w-100">
      {{ render(controller('AppBundle:Default:menu')) }}
    </ul>
    {% if not app.user.isPremium() %}
    <ul class="nav nav-pills flex-column pt-3 w-100">
      <li class="nav-item">
        <a href="{{ path('app_purchase') }}" class="btn btn-premium text-white w-100">Passez premium !</a>
      </li>
    </ul>
    {% else %}
    <ul class="nav nav-pills flex-column pt-5 w-100">
      <li class="nav-item premium-menu">
        <div class="text-warning w-100 pl-3 p-1">Compte Premium : <br>{{ app.user.getRemainTime() }}</div>
      </li>
    </ul>
    {% endif %}

  </div>
</nav>