    {% javascripts 
      '@HomeBundle/Resources/js/scrollTop.js' 
      '@HomeBundle/Resources/js/home.js'
    %}
      <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
  </body>

</html>