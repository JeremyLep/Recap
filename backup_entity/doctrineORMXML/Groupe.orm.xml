<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Groupe" table="groupe">
    <indexes>
      <index name="FK_Groupe_id_Compte" columns="compte_id"/>
    </indexes>
    <id name="groupeId" type="integer" column="groupe_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="string" column="titre" length="75" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbFiche" type="integer" column="nb_fiche" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="passwordGroupe" type="string" column="password_groupe" length="75" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbMembre" type="integer" column="nb_membre" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="dateCreation" type="datetime" column="date_creation" nullable="true"/>
    <many-to-one field="compte" target-entity="Compte" fetch="LAZY">
      <join-columns>
        <join-column name="compte_id" referenced-column-name="compte_id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="idCompte" target-entity="Compte" mapped-by="idGroupe" fetch="LAZY"/>
    <many-to-many field="idMembre" target-entity="Membre" inversed-by="idGroupe" fetch="LAZY">
      <join-table name="groupe_membre">
        <join-columns>
          <join-column name="id_groupe" referenced-column-name="groupe_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_membre" referenced-column-name="membre_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
