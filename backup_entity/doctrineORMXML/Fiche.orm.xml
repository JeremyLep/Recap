<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Fiche" table="fiche">
    <indexes>
      <index name="FK_Fiche_id_Groupe" columns="groupe_id"/>
    </indexes>
    <id name="ficheId" type="integer" column="fiche_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="string" column="titre" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="600" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateCreation" type="date" column="date_creation" nullable="true"/>
    <field name="duree" type="string" column="duree" length="25" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="difficulte" type="string" column="difficulte" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="noteAuteur" type="smallint" column="note_auteur" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="noteUser" type="smallint" column="note_user" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nbRessource" type="integer" column="nb_ressource" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nbCommentaire" type="integer" column="nb_commentaire" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="groupe" target-entity="Groupe" fetch="LAZY">
      <join-columns>
        <join-column name="groupe_id" referenced-column-name="groupe_id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="tag" target-entity="Tag" mapped-by="idFiche" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
